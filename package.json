{
  "name": "ynw",
  "displayName": "ynw",
  "description": "Some Tool for YNW",
  "version": "0.0.11",
  "publisher": "liqiang0335",
  "author": "liqiang0335 <liqiang0335@gmail.com>",
  "bugs": {
    "url": "https://github.com/liqiang0335/ynw-vscode-plugin/issues",
    "email": "liqiang0335@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/liqiang0335/ynw-vscode-plugin.git"
  },
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.jpg",
  "keywords": [
    "ynw",
    "relative path",
    "import"
  ],
  "activationEvents": [
    "onCommand:ynw.createSameNameFile",
    "onCommand:ynw.importModule",
    "onCommand:ynw.relavePath",
    "onCommand:ynw.webpackBuild.dev",
    "onCommand:ynw.webpackBuild.hot",
    "onCommand:ynw.webpackBuild.pro"
  ],
  "main": "./src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Ynw configration",
      "properties": {
        "ynw.showImportModuleMenu": {
          "description": "enable in explorer/menu",
          "type": "boolean",
          "default": false
        },
        "ynw.showCopyRelativePathMenu": {
          "description": "enable in explorer/menu",
          "type": "boolean",
          "default": false
        },
        "ynw.createSameNameFile": {
          "description": "enable in explorer/menu",
          "type": "boolean",
          "default": false
        },
        "ynw.styleFileType": {
          "description": "file extension",
          "type": "string",
          "default": "scss",
          "enum": [
            "css",
            "scss",
            "less"
          ]
        }
      },
      "ynw.createStyleFileType": {
        "description": "style file extension",
        "type": "string",
        "default": "scss",
        "enum": [
          "css",
          "scss",
          "less"
        ]
      }
    },
    "commands": [{
        "command": "ynw.importModule",
        "title": "Import this module"
      },
      {
        "command": "ynw.createSameNameFile",
        "title": "Create Same Name File"
      },
      {
        "command": "ynw.relavePath",
        "title": "Copy Relative for Active"
      },
      {
        "command": "ynw.webpackBuild.dev",
        "title": "Ynw Build this - Dev"
      },
      {
        "command": "ynw.webpackBuild.hot",
        "title": "Ynw Build this - Hot"
      },
      {
        "command": "ynw.webpackBuild.pro",
        "title": "Ynw Build this - Pro"
      }
    ],
    "menus": {
      "explorer/context": [{
          "command": "ynw.importModule",
          "when": "config.ynw.showImportModuleMenu",
          "group": "ynw-a@1"
        },
        {
          "command": "ynw.createSameNameFile",
          "when": "config.ynw.createSameNameFile",
          "group": "ynw-a@2"
        },
        {
          "command": "ynw.relavePath",
          "when": "config.ynw.showCopyRelativePathMenu",
          "group": "ynw-a@3"
        },
        {
          "command": "ynw.webpackBuild.dev",
          "when": "resourceExtname == .js",
          "group": "ynw-b@1"
        },
        {
          "command": "ynw.webpackBuild.hot",
          "when": "resourceExtname == .js",
          "group": "ynw-b@2"
        },
        {
          "command": "ynw.webpackBuild.pro",
          "when": "resourceExtname == .js",
          "group": "ynw-b@3"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.21",
    "eslint": "^4.11.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "copy-paste": "^1.3.0"
  }
}